<header class="bg-gradient-to-r from-red-600 to-red-400 text-white shadow-lg">
  <nav class="container mx-auto px-4 py-3">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <a
        href="/store"
        class="flex items-center text-2xl font-bold hover:text-red-100 transition duration-300"
      >
        <svg class="h-8 w-8 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path
            d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
          />
        </svg>
        <span>Airbnb</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden sm:flex items-center space-x-8">
        <% if (isLoggedIn) { %> <% if (user && user.userType === 'guest') { %>
        <!-- Guest Navigation -->
        <nav class="flex items-center space-x-6">
          <a
            href="/store/homes"
            class="nav-link <%= currentPage === 'Home' ? 'active' : '' %>"
          >
            Homes List
          </a>
          <a
            href="/store/favourites"
            class="nav-link <%= currentPage === 'favourites' ? 'active' : '' %>"
          >
            Favourites
          </a>
          <a
            href="/store/bookings"
            class="nav-link <%= currentPage === 'bookings' ? 'active' : '' %>"
          >
            Bookings
          </a>
        </nav>
        <% } else { %>
        <!-- Host Navigation -->
        <nav class="flex items-center space-x-6">
          <a
            href="/host/host-home-list"
            class="nav-link <%= currentPage === 'host-homes' ? 'active' : '' %>"
          >
            Host Homes
          </a>
          <a
            href="/host/add-home"
            class="nav-link <%= currentPage === 'addHome' ? 'active' : '' %>"
          >
            Add Home
          </a>
        </nav>
        <% } %>

        <!-- Logout Button -->
        <form action="/logout" method="POST" class="ml-6">
          <button type="submit" class="nav-link">Logout</button>
        </form>
        <% } else { %>
        <!-- Auth Links -->
        <nav class="flex items-center space-x-4">
          <a href="/signup" class="nav-link">Sign Up</a>
          <a href="/login" class="nav-link auth-button">Login</a>
        </nav>
        <% } %>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="sm:hidden p-2 hover:bg-white hover:bg-opacity-10 rounded-lg"
      >
        <svg
          class="h-6 w-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="sm:hidden hidden pt-4">
      <nav class="flex flex-col space-y-2">
        <% if (isLoggedIn) { %> <% if (user && user.userType === 'guest') { %>
        <a
          href="/store/homes"
          class="mobile-nav-link <%= currentPage === 'Home' ? 'active' : '' %>"
        >
          Homes List
        </a>
        <a
          href="/store/favourites"
          class="mobile-nav-link <%= currentPage === 'favourites' ? 'active' : '' %>"
        >
          Favourites
        </a>
        <a
          href="/store/bookings"
          class="mobile-nav-link <%= currentPage === 'bookings' ? 'active' : '' %>"
        >
          Bookings
        </a>
        <% } else { %>
        <a
          href="/host/host-home-list"
          class="mobile-nav-link <%= currentPage === 'host-homes' ? 'active' : '' %>"
        >
          Host Homes
        </a>
        <a
          href="/host/add-home"
          class="mobile-nav-link <%= currentPage === 'addHome' ? 'active' : '' %>"
        >
          Add Home
        </a>
        <% } %>
        <form action="/logout" method="POST" class="mt-2">
          <button type="submit" class="w-full text-left mobile-nav-link">
            Logout
          </button>
        </form>
        <% } else { %>
        <a href="/signup" class="mobile-nav-link">Sign Up</a>
        <a href="/login" class="mobile-nav-link auth-button">Login</a>
        <% } %>
      </nav>
    </div>
  </nav>
</header>

<style>
  /* Base styles for navigation links */
  .nav-link {
    @apply px-4 py-2 rounded-lg text-sm font-medium relative;
    position: relative;
    transition: all 0.3s ease;
  }

  /* Hover effect for nav links */
  .nav-link:hover {
    @apply bg-white bg-opacity-10;
    transform: translateY(-2px);
  }

  /* Active state styling */
  .nav-link.active {
    @apply bg-white bg-opacity-25 font-bold;
  }

  /* Underline effect for active links */
  .nav-link.active::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: white;
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.8);
  }

  /* Mobile navigation styles */
  .mobile-nav-link {
    @apply block px-4 py-3 rounded-lg text-sm font-medium w-full text-left;
    transition: all 0.3s ease;
  }

  /* Hover effect for mobile links */
  .mobile-nav-link:hover {
    @apply bg-white bg-opacity-10;
    transform: translateX(8px);
  }

  /* Active state for mobile links */
  .mobile-nav-link.active {
    @apply bg-white bg-opacity-25 font-bold;
    border-left: 4px solid white;
    padding-left: 1rem;
  }

  /* Auth button styles */
  .auth-button {
    @apply bg-white text-red-600;
    transition: all 0.3s ease;
  }

  /* Auth button hover effect */
  .auth-button:hover {
    @apply bg-red-100;
    transform: scale(1.05);
  }

  /* Logout button specific styles */
  button[type="submit"].nav-link {
    @apply cursor-pointer border border-white border-opacity-30;
  }

  button[type="submit"].nav-link:hover {
    @apply bg-red-500 border-opacity-100;
  }
</style>

<!-- Add this script at the bottom of your file -->
<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  mobileMenuButton.addEventListener("click", (e) => {
    e.stopPropagation();
    mobileMenu.classList.toggle("hidden");
  });

  // Close mobile menu when clicking outside
  document.addEventListener("click", (e) => {
    if (
      !mobileMenu.contains(e.target) &&
      !mobileMenuButton.contains(e.target)
    ) {
      mobileMenu.classList.add("hidden");
    }
  });

  // Add active class to current page link
  document.addEventListener("DOMContentLoaded", () => {
    const currentPath = window.location.pathname;
    const links = document.querySelectorAll(".nav-link, .mobile-nav-link");

    links.forEach((link) => {
      if (link.getAttribute("href") === currentPath) {
        link.classList.add("active");
      }
    });
  });
</script>
