
<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
</head>
<body class="bg-gray-100 font-sans">
  <%- include('../partials/header') %>

  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
    <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
      Hey Host! Here are your Homes:
    </h2>

    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% registeredHomes.forEach(home => { %>
        <li class="bg-white rounded-xl shadow-lg overflow-hidden transform hover:scale-105 transition-transform duration-300 border border-gray-200">
          
          <% if (home.photo) { %>
            <img src="<%= home.photo %>" alt="Home Photo" class="w-full h-72 object-cover">
          <% } else { %>
            <div class="w-full h-72 bg-gradient-to-r from-red-400 to-pink-500 flex items-center justify-center text-white text-xl font-bold">
              No Image
            </div>
          <% } %>

          <div class="p-5">
            <h3 class="text-xl font-bold text-red-500 mb-2">
              üè† <%= home.houseName %>
            </h3>

            <p class="text-gray-600 mb-2">
              <i class="fas fa-map-marker-alt mr-1 text-red-400"></i>
              <%= home.location %>
            </p>

            <div class="flex justify-between items-center mb-3">
              <span class="text-lg font-bold text-red-500">‚Çπ<%= home.price %>/night</span>
              <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm font-semibold">‚≠ê <%= home.rating %>/5</span>
            </div>

            <a
              href="/host/edit-home/<%=home._id%>?editing=true"
              class="mt-2 px-4 py-2 text-center bg-blue-500 text-white  rounded-lg hover:bg-blue-600 transition mb-3"
            >
              Edit
            </a>

            <form action="/host/delete-home/<%=home._id%>" method="POST">
              <button
                type="submit"
                class="mt-4 px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition"
              >
                Delete
              </button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </main>
</body>
</html>

