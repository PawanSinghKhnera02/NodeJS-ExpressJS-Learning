<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
  </head>
  <body class="bg-gray-100 font-sans">
    <%- include('../partials/header') %>

    <main
      class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl"
    >
      <h2 class="text-2xl text-red-500 font-bold text-center mb-6">
          Hey Host! Here are your Homes:
      </h2>

<ul class="grid grid-cols-1 md:grid-cols-2 gap-6">
  <% registeredHomes.forEach(home => { %>
    <li class="bg-white rounded-xl shadow-lg overflow-hidden transform hover:scale-105 transition-transform duration-300 border border-gray-200">
      <% if (home.photoUrl) { %>
        <img src="<%= home.photoUrl %>" alt="Home Photo" class="w-full h-48 object-cover">
      <% } else { %>
        <div class="w-full h-48 bg-gradient-to-r from-red-400 to-pink-500 flex items-center justify-center text-white text-xl font-bold">
          No Image
        </div>
      <% } %>

      <div class="p-4">
        <h3 class="text-xl font-bold text-red-500 mb-1">
          🏠 <%= home.houseName %>
        </h3>
        
        <div class="flex flex-wrap gap-2 text-sm text-gray-600 mb-2">
          <span class="bg-gray-100 px-2 py-1 rounded-full">💰 ₹<%= home.price %></span>
          <span class="bg-gray-100 px-2 py-1 rounded-full">📍 <%= home.location %></span>
          <span class="bg-yellow-100 px-2 py-1 rounded-full">⭐ <%= home.rating %>/5</span>
        </div>

        <a
          href="/host/edit-home/<%=home._id%>?editing=true"
          class="mt-2 inline-block w-full bg-blue-500 text-white text-center py-2 rounded-lg hover:bg-blue-600 transition duration-300"
        >
          Edit
        </a>
        <form action="/host/delete-home/<%=home._id%>" method="POST">
          <button type="submit" class="mt-2 w-full bg-red-500 text-white py-2 rounded-lg hover:bg-red-600 transition">
            Delete
          </button> 

        </form>
      </div>
    </li>
  <% }) %>
</ul>


    </main>
  </body>
</html>
