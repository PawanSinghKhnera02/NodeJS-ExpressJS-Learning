<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
</head>
<body class="bg-gray-100 font-sans">
  <%- include('../partials/header') %>

  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
    <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
      Your Favourite Homes
    </h2>

    <% if (favouriteHomes.length === 0) { %>
      <p class="text-center text-gray-500 text-lg">You haven't added any favourites yet.</p>
    <% } else { %>
      <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% favouriteHomes.forEach(home => { %>
          <li class="bg-white rounded-xl shadow-lg overflow-hidden transform hover:scale-105 transition-transform duration-300 border border-gray-200">
            
            <% if (home.photoUrl) { %>
              <img src="<%= home.photoUrl %>" alt="Home Photo" class="w-full h-72 object-cover">
            <% } else { %>
              <div class="w-full h-48 bg-gradient-to-r from-red-400 to-pink-500 flex items-center justify-center text-white text-xl font-bold">
                No Image
              </div>
            <% } %>

            <div class="p-4">
              <h3 class="text-xl font-bold text-red-500 mb-1">
                üè† <%= home.houseName %>
              </h3>

              <p class="text-gray-600 mb-2">
                <i class="fas fa-map-marker-alt mr-1 text-red-400"></i><%= home.location %>
              </p>

              <div class="flex justify-between items-center mb-2">
                <span class="text-lg font-bold text-red-500">‚Çπ<%= home.price %>/night</span>
                <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm font-semibold">
                  ‚≠ê <%= home.rating %>/5
                </span>
              </div>

              <div class="flex justify-between gap-4 mt-4">
                <form action="/store/favourites/delete/<%= home.id %>" method="POST">
                  <button type="submit" class="w-full bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition">
                  Remove
                  </button>
                </form>
                <a href="/store" class="w-full text-center bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition">
                  Book Now
                </a>
              </div>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </main>
</body>
</html>
